<div class="mt-4 mb-4">
    <h3>Cập nhật khóa học</h3>

    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>

        <div class="form-group">
            <label for="description">Mô tả khóa học</label>
            <textarea name="description" class="form-control" rows="7" id="description">{{course.description}}</textarea>
        </div>

        <div class="form-group">
            <label for="image">Hình ảnh</label>
            <input type="text" class="form-control" value="{{course.image}}" id="image" name="image">
        </div>


        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" value="{{course.level}}" id="level" name="level">
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>